<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/titleContent_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        >
        <Spinner
            android:id="@+id/titleDropdownList"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:textSize="25sp"
            android:textColor="@color/shinegreen"
            >
        </Spinner>
        <ImageView
            android:id="@+id/title_imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/down_round"
            android:layout_toRightOf="@+id/titleDropdownList"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/selectedItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleContent_layout"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addNewStore1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/shinegreen"
            android:layout_marginLeft="20dp"
            ></Button>
    </LinearLayout>
</RelativeLayout>
